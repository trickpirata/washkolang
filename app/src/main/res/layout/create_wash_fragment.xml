<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.createwash.CreateWashFragment">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_10"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtPlateNumber"
                android:ems="10"
                android:hint="@string/txtPlateNumberHint"
                android:layout_width="353dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_50" />

            <EditText
                android:id="@+id/txtCarMake"
                android:ems="10"
                android:hint="@string/txtCarMakeHint"
                android:layout_width="353dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_50" />

            <EditText
                android:id="@+id/txtCarModel"
                android:ems="10"
                android:hint="@string/txtCarMakeHint"
                android:layout_width="353dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_50" />
            <EditText
                android:id="@+id/txtCarColor"
                android:ems="10"
                android:hint="@string/txtCarColorHint"
                android:layout_width="353dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_50"
                android:layout_below="@+id/txtCarMake"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70"
                android:layout_below="@+id/txtCarColor"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblCarSize"
                    android:text="Car Size:"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_50" />

                <Spinner
                    android:id="@+id/spinCarSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        <Button
            android:id="@+id/btnBook"
            android:text="@string/btnBookText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>